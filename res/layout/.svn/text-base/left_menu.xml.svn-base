<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/login_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/lightgray" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/login_k"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/newuser_register"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/button_login"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:textColor="@color/blueviolet"
            android:text="@string/register"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_top"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/mymessage" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_message"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/my_k" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/my_k" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_local_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_k"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/local_music" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/local_music" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_download_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_local_music"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/download" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/download_managment" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_shere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_download_management"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/shere" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_content_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_shere"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/content_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/content_back" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_content_back"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/help" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_help"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/setting" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/my_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_setting"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:text="@string/exit" />
    </LinearLayout>

</RelativeLayout>